<Root>
  
<commands>
        <cmd name="PrintSetup" _label="Print Set_up" 
             _tip="Setup the page settings for your current printer" 
        	 pixtype="stock" pixname="Print"/>
        <cmd name="PrintPreview" _label="Print Previe_w.."
             _tip="Previews the image to be printed"
             pixtype="pixbuf" accel="*Control**Shift*P"/>
        <cmd name="Print" _label="_Print..."
             _tip="Print image to the printer"
        	 pixtype="stock" pixname="Print" accel="*Control*P"/>

	<cmd name="SaveAs" _label="Save _As..." 
	     pixtype="stock" pixname="Save As" accel="*Control**Shift*S"/>

	<cmd name="FullScreen"  _label="Full Screen" accel="F11"/>
	<cmd name="FlipHorizontal" _label="Flip Horizontal"/>
	<cmd name="FlipVertical" _label="Flip Vertical"/>
        <cmd name="Rotate90cw" _label="Rotate Clockwise"/>
	<cmd name="Rotate90ccw" _label="Rotate Counter Clockwise"/>
	<cmd name="Rotate180" _label="Rotate 180 Degrees"/>
</commands>

<menu>

    <submenu name="File">
            <placeholder name="File Items Placeholder">
	             <menuitem name="SaveAs" verb=""/>

<!-- FIXME: Enable this if printing operations has been
            ported to Gnome2.
	             <separator/>
                     <menuitem name="PrintSetup" verb=""/>
		     <menuitem name="PrintPreview" verb=""/>
		     <menuitem name="Print" verb=""/>
-->

            </placeholder>
    </submenu>

    <submenu name="Edit" _label="_Edit">
           <placeholder name="Edit Items Placeholder">
                  <menuitem name="FlipHorizontal" verb=""/>
                  <menuitem name="FlipVertical" verb=""/>
	          <separator/>
                  <menuitem name="Rotate90cw" verb=""/>
                  <menuitem name="Rotate90ccw" verb=""/>
	          <menuitem name="Rotate180" verb=""/>
           </placeholder>
    </submenu>
  
    <submenu name="View" _label="_View">

            <placeholder name="View Items Placeholder">
  	             <menuitem name="FullScreen" verb=""/>
            </placeholder>

 	    <placeholder name="Zoom Items Placeholder" delimit="top"/>
    </submenu>

</menu>

</Root>
